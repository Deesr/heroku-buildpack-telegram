#!/bin/sh

indent() {
  sed -u 's/^/-----> /'
}


BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

VENDOR_DIR="vendor"


export_env_dir() {
  env_dir=$1
  whitelist_regex=${2:-''}
  blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
  if [ -d "$env_dir" ]; then
    for e in $(ls $env_dir); do
      echo "$e" | grep -E "$whitelist_regex" | grep -qvE "$blacklist_regex" &&
      export "$e=$(cat $env_dir/$e)"
      :
    done
  fi
}

if [ -d "$ENV_DIR" ]; then
  echo "-----> Exporting config vars to environment"
  export_env_dir $ENV_DIR
fi

echo "-----> Install telegram"

DOWNLOAD_URL="http://github.com/vysheng/tg/archive/1.0.5.1.tar.gz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar xz

echo "Build telegram-cli" | indent
cd tg-1.0.5.1
echo "Configure telegram-cli" | indent
./configure --disable-liblua
echo "Make telegram-cli" | indent
make

echo "Downloading Auth file" | indent
cd $HOME
mkdir .telegram-cli
cd .telegram-cli
echo $AUTH_URL
curl -O --silent $AUTH_URL

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/telegram-cli.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo ''
echo 'export PATH="$PATH:$HOME/vendor/tg-1.0.5.1/bin"' >> $PROFILE_PATH
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$HOME/vendor/tg-1.0.5.1/bin"' >> $PROFILE_PATH